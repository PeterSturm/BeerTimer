<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="android.anthor.beertimer.util.IntroActivity"
                android:background="@color/base">

    <ImageView
        android:layout_width="243dp"
        android:layout_height="397dp"
        android:id="@+id/intro_base"
        android:src="@drawable/intro_base"
        android:focusableInTouchMode="false"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"/>

    <ImageView
        android:layout_width="84dp"
        android:layout_height="34dp"
        android:id="@+id/intro_buton"
        android:src="@drawable/intro_button"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/intro_base"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intro_timer"
        android:src="@drawable/intro_timer_orange"
        android:adjustViewBounds="false"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/intro_base"
        android:layout_alignStart="@+id/intro_base"
        android:layout_alignRight="@+id/intro_base"
        android:layout_alignEnd="@+id/intro_base"
        android:alpha="0.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Made by AnThor"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
